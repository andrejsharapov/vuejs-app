            aside(:class="{ show }")
                site-navigation(:navlist="navlist")

                h4#aside-title Development
                    span &amp; Design

            article#art(:class="{ scale }")
                block topHeader
                    header
                        block header
                        block masthead
                            #masthead
                                .container(data-title=pageTitle)
                                    h1.pageName
                                        block pageName
                                            | #{ pageName }
                                    block leadText
                                        p.lead #{ leadText }

                #main
                    .container
                        #content-wrapper
                            block content
                            
                block footer
                    footer
                        .container
                            p.copy Copyright &copy; 
                                span#year 
                                span.heart with 
                                    span ♥ 
                                | 
                                a(href="//twitter.com/andrejsharapov", target="_blank", rel="noopener noreferrer") @andrejsharapov
