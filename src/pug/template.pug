include includes/vars

doctype html
html(lang=pageLang)
    head
        meta(charset="UTF-8")
        meta(name="viewport" content= viewport)
        meta(http-equiv="X-UA-Compatible" content="ie=edge")
        title
            block title
                | #{ siteName }

        meta(name="title" content= siteName + ' — ' + pageTitle)
        meta(name="description" content= pageDesc)
        link(rel="author" href="/website.txt")

        if meta
            include includes/meta
        if icons
            include includes/favicons
        link(rel="stylesheet" href="//fonts.googleapis.com/css?family=Montserrat|Merriweather&display=swap")
        link(rel="stylesheet" href="/css/style.min.css")

        if page
            block pageStyles

        link(rel="dns-prefetch" href="//fonts.googleapis.com")
        link(rel="dns-prefetch" href="//cdnjs.cloudflare.com")
        link(rel="dns-prefetch" href="//unpkg.com")

    body(id= headId)

        <!-- Google Tag Manager (noscript) -->
        noscript
            iframe(src="https://www.googletagmanager.com/ns.html?id=GTM-PMFQB7Z" height="0" width="0" style="display:none;visibility:hidden")
        <!-- End Google Tag Manager (noscript) -->
                        
        #wrapper(:class="{ overflow }")
            #cursor
            button.toggle(@click="overflow = !overflow, isactive = !isactive, show = !show, scale = !scale")
                svg.ham(:class="{ isactive }" viewBox="0 0 100 100")
